<%= f.simple_fields_for :persona do |p| %>
  <%= render 'sip/personas/persona_fields', f: p, fvictima: f  %>
<% end %>
<%= f.association :profesion,
	collection: Sivel2Gen::Profesion.habilitados,
	include_blank: false,
	label: "Profesión",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :rangoedad,
	collection: Sivel2Gen::Rangoedad.habilitados(:rango),
	include_blank: false,
	label: "Rango de Edad",
	label_method: :rango, 
	value_method: :id 
%>
<%= f.association :filiacion,
	collection: Sivel2Gen::Filiacion.habilitados,
	include_blank: false,
	label: "Filiación",
	label_method: :nombre, 
  value_method: :id,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Partido o filiación política en el momento del hecho' 
  }
%>
<%= f.association :organizacion,
	collection: Sivel2Gen::Organizacion.habilitados,
	include_blank: false,
	label: "Organización",
	label_method: :nombre, 
  value_method: :id,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Organización a la que pertenecía en el momento del hecho'
  }
%>
<%= f.association :vinculoestado,
	collection: Sivel2Gen::Vinculoestado.habilitados,
	include_blank: false,
	label: "Vínculo con el Estado",
	label_method: :nombre, 
  value_method: :id,
  input_html: {
    "data-toggle" => 'tooltip',
    "title" => 'Registre si la persona era funcionaria pública en el momento del hecho'
  }
%>
<%= f.association :etnia,
	collection: Sivel2Gen::Etnia.habilitados,
	include_blank: false,
	label: "Etnia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.association :iglesia,
	collection: Sivel2Gen::Iglesia.habilitados,
	include_blank: false,
	label: "Religión/Iglesia",
	label_method: :nombre, 
	value_method: :id 
%>
<%= f.input(:orientacionsexual, collection: [
						[:HETEROSEXUAL, :H], [:LESBIANA, :L], [:GAY, :G], 
						[:BISEXUAL, :B], [:TRANSEXUAL, :T] 
], 
	label: "Orientación Sexual",
	include_blank: false ) 
%>
<%= f.input :id, as: :hidden %>

