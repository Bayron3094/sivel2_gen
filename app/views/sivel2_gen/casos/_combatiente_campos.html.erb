<div class='control-group nested-fields'>
  <div class="controls">
    
    <%= f.input :id, as: :hidden %>

    <%= f.input :nombre %>

    <%= f.input :alias %>

    <%= f.input :edad %>

    <%= f.input :sexo, collection: [["SIN INFORMACIÓN", :S], 
      ["FEMENINO", :F], ["MASCULINO", :M]], 
      include_blank: false 
    %>

    <%= f.association :rangoedad,
      collection: Sivel2Gen::Rangoedad.habilitados(:rango),
      include_blank: false,
      label: "Rango de Edad",
      label_method: :rango, 
      value_method: :id 
    %>
  
    <%= f.association :sectorsocial,
      collection: Sivel2Gen::Sectorsocial.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id
    %>
  
    <%= f.association :vinculoestado,
      collection: Sivel2Gen::Vinculoestado.habilitados,
      include_blank: false,
      label: "Vínculo con el Estado",
      label_method: :nombre, 
      value_method: :id
    %>
  
    <%= f.association :filiacion,
      collection: Sivel2Gen::Filiacion.habilitados,
      include_blank: false,
      label: "Filiación",
      label_method: :nombre, 
      value_method: :id 
    %>

    <%= f.association :profesion,
      collection: Sivel2Gen::Profesion.habilitados,
      include_blank: false,
      label: "Profesión",
      label_method: :nombre, 
      value_method: :id 
    %>
    
    <%= f.association :organizacion,
      collection: Sivel2Gen::Organizacion.habilitados,
      include_blank: false,
      label: "Organización",
      label_method: :nombre, 
      value_method: :id 
    %>

    <%= f.association :presponsable,
      collection: Sivel2Gen::Presponsable.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id 
    %>
  
    <%= f.association :resagresion,
      collection: Sivel2Gen::Resagresion.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id 
    %>

    <%= f.association :antecedente,
      collection: Sivel2Gen::Antecedente.habilitados,
      include_blank: false,
      label_method: :nombre, 
      value_method: :id 
    %>


    <%= link_to_remove_association "Eliminar Combatiente", f, 
      {:class => 'btn-danger', :'data-existing' => 'true'} 
    %> 
  </div>
</div>
