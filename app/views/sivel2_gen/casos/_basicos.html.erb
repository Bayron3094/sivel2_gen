<div class="row">
  <div class="col-md-6">
    <%= f.input :fecha, 
      :input_html => { "data-behaviour" => "datepicker" },
      :as => :string %>
  </div>
  <div class="col-md-6">
    <%= f.input :id, readonly: true%>
  </div>
</div>

<%= f.input :titulo %>

<div class="row">
  <div class="col-md-4">
    <%= f.input :hora %> <!--, as: :time, ampm: true -->
  </div>
  <div class="col-md-4">
    <%= f.input :duracion %>
  </div>
  <div class="col-md-4">
    <%= f.association :intervalo,
      collection: Sivel2Gen::Intervalo.habilitados,
      label_method: :nombre,
      value_method: :id %>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <%= f.association :region, 
      collection: Sivel2Gen::Region.habilitados,
      label_method: :nombre, 
      input_html: { class: 'chosen-select' },
      value_method: :id %>
  </div>
  <div class="col-md-6">
    <%= f.association :frontera, 
      collection: Sivel2Gen::Frontera.habilitados,
      label_method: :nombre, 
      input_html: { class: 'chosen-select' },
      value_method: :id %>
  </div>
</div>
