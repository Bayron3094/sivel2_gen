<%- model_class = Caso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<table width="100%">
  <tr>
    <td width="33%">
      <% if @conscaso.size > 0 %>
        <%= link_to t('.new', :default => t("helpers.links.new")),
          new_caso_path,
          :class => 'btn btn-primary' 
        %>
      <% end %>
    </td>
    <td style="width=33%;text-align: center">
      Casos: <%= @numconscaso %>
    </td>
    <td style="text-align: right">
      <%= form_tag(casos_path, method: "get") do %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Filtrar") %>
      <% end %>
    </td>
  </tr>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Caso.human_attribute_name(:id) %></th>
      <th><%= Caso.human_attribute_name(:fecha) %></th>
      <th><%= Caso.human_attribute_name(:memo) %></th>
      <th><%= "Ubicaciones" %></th>
      <th><%= "Víctimas" %></th>
      <th><%= "P. Responsable" %></th>
      <th><%= "Tipificación" %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @conscaso.try(:each) do |caso| %>
      <tr>
        <td><%= link_to caso.caso_id, caso_path(caso.caso_id) %></td>
        <td><%= caso.fecha %></td>
        <td><%= caso.memo %></td>
        <td><%= caso.ubicaciones %></td>
        <td><%= caso.victimas %></td>
        <td><%= caso.presponsables %></td>
        <td><%= caso.tipificacion %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_caso_path(caso.caso_id), :class => 'btn btn-xs' 
          %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            caso_path(caso.caso_id),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-xs btn-danger' 
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @conscaso, { param_name: :pagina }  %>
<%= link_to t('.new', :default => t("helpers.links.new")),
  new_caso_path,
  :class => 'btn btn-primary' 
%>
