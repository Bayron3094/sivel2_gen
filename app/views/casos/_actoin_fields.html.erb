<%= f.association :presponsable,
  collection: Presponsable.from(
    'caso_presponsable, presponsable').where(
    'caso_presponsable.id_presponsable=presponsable.id 
      AND caso_presponsable.id_caso=?', @caso.id),
  label: "Presunto Responsable",
  wrapper_html: { style: "padding-bottom: 18px;" },
  label_method: :nombre,
  value_method: :id 
%>

<%= f.association :categoria,
  collection: Categoria.from('categoria').habilitados.where(
    "id_tviolencia<>'R'").order(:id_tviolencia, :id),
  label: "Categoria",
  label_method: :nombre, 
  label_method: lambda {|t| t.id_tviolencia + t.id.to_s + ' ' + t.nombre },
  value_method: :id 
%>

